<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="Theme.Recorder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:windowBackground">@color/secondaryColor</item>
    </style>

    <style name="Theme.Recorder.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darkPrimaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="colorAccent">@color/darkSecondaryColor</item>
        <item name="android:windowBackground">@color/darkPrimaryColor</item>
        <item name="android:textColorPrimary">@color/darkSecondaryColor</item>
    </style>
  <!--// 💡✌🏾 In the End, He made them Open-Source 💜❤️ // -->
</resources>


